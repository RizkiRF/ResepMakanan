<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.web.rizki.resepmakanan.DetailItem"
    android:background="@color/darkwhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/darkwhite">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:background="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_detail_makan"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/text_detail_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:layout_gravity="left"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_detail_deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_gravity="left"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:background="@android:color/background_light"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Bahan - Bahan : "
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_detail_bahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_gravity="left"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:orientation="vertical"
            android:background="@android:color/background_light"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="Cara Membuat : "
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_detail_pembuatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:layout_gravity="left"
                android:textSize="12sp"/>

        </LinearLayout>


    </LinearLayout>






</ScrollView>
